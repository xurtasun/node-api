{
    "compilerOptions": {
      "module": "commonjs",
      "esModuleInterop": true,
      "target": "ES2015",
      "lib" : ["es2015"],
      "noImplicitAny": true,
      "strictNullChecks": true,
      "moduleResolution": "node",
      "noEmitOnError": true,
      "sourceMap": true,
      "outDir": "dist",
      "baseUrl": ".",
      "allowJs": true,
      "watch": false,
      "resolveJsonModule": true,
      "types": ["node","mocha"],
      "paths": {
        "*": [
          "node_modules/*",
          "src/types/*"
        ]
      }
    },
    "include": [
      "app/*",
      "*.ts",
      "test/**/*"
    ]
  }
  